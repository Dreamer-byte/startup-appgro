<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/shape_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCapture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Trigo"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cera_pro_bold"
        app:layout_constraintTop_toTopOf="@id/ivCapture"
        app:layout_constraintStart_toEndOf="@id/ivCapture"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:text="Lorem ipsum dolor sit amet"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/ivCapture"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado"
        android:fontFamily="@font/cera_pro_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvAlert"
        app:layout_constraintStart_toEndOf="@id/ivCapture"
        app:layout_constraintTop_toTopOf="@id/tvAlert"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAlert"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        tools:text="Grave"
        android:textAlignment="center"
        android:fontFamily="@font/cera_pro_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:elevation="6dp"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@id/tvState"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/bookmark"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExclamation"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:src="@drawable/circle_exclamation"
        app:layout_constraintEnd_toStartOf="@id/tvMessage"
        app:layout_constraintTop_toBottomOf="@id/line"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/cera_pro_bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        tools:text="Â¡Necesitas aplicar esto de inmediato!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>